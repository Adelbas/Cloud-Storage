<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="480.0" prefWidth="640.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.adel.client.controller.LoginController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <Text fx:id="invalidCreditsText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" visible="false">
      <font>
         <Font size="14.0" />
      </font>
      <VBox.margin>
         <Insets />
      </VBox.margin>
   </Text>
   <Text fx:id="attemptsRemainingText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" visible="false">
      <font>
         <Font size="14.0" />
      </font>
   </Text>
  <TextField fx:id="usernameField" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Username" />
  <PasswordField fx:id="passwordField" focusTraversable="false" maxHeight="-Infinity" maxWidth="-Infinity" promptText="Password" />
  <Button mnemonicParsing="false" onAction="#onLoginButtonClick" text="Sign in" />
</VBox>
